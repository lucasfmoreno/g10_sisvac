<h2>Registro</h2>

<%flash.each do |type,msg|%>
    <b><%=msg%></b>
<%end%>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre, autofocus:true %>
  </div>

  <div class="field">
    <%= f.label :apellido %><br />
    <%= f.text_field :apellido, autofocus:true %>
  </div>

  <div class="field">
    <%= f.label :direccion %><br />
    <%= f.text_field :direccion, autofocus:true %>
  </div>

  <div class="field">
    <%= f.label :vacunatorio %><br />
    <%= f.select :vacunatorio, ['Municipalidad','Terminal','Cementerio'] %>
  </div>

  <div class="field">
    <%= f.label :dni %><br />
    <%= f.number_field :dni, autofocus:true %>
  </div>

  <div class="field">
    <%= f.label :edad %><br />
    <%= f.number_field :edad, autofocus:true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div><br/>

  <div>
    <%= f.label :diabetico, "多Es Ud. de riesgo?" %>
    <%= f.check_box :diabetico,{},true %>
  </div>

  <p></p>

  <div>
    <%= f.label :se_puso_covid, "多Se aplico vacuna COVID?"%>
    <%= f.check_box :se_puso_covid%>
    <%= f.label :dosis_covid, "多Ultima dosis colocada?" %>
    <%= f.number_field :dosis_covid, value: 0 %>
  </div>

  <div>
    <%= f.label :se_puso_gripe, "多Se aplico vacuna GRIPE?" %>
    <%= f.check_box :se_puso_gripe%>
    <%= f.label :fecha_gripe, "Fecha de la vacunacion GRIPE" %>
    <%= f.date_field :fecha_gripe, value: Date.today%>
  </div>

  <br/>
  
  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
