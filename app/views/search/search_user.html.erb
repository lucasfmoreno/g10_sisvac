                                        <tr>
                                            <th>Tipo de Vacuna</th>
                                            <th>Fecha de solicitud</th>
                                            <th>Estado</th>
                                        </tr>
        <% @turno.each do |turno| %>
                                        <tr>
                                            <td><%= turno.tipovacuna %></td>
                                            <td><%= turno.remember_created_at %></td>
                                            <td><%= turno.estado %></td>
        <td><%= link_to "Ver detalle", turno_path(:id => turno.id) %></td>   
        </tr>
        <% end %>
    </table>
    <%end%>
                    
