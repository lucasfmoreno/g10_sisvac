    <% arreglo = ["COVID", "GRIPE", "FIEBRE AMARILLA"] %>  
    <table style="text-align:center;float:left;padding-left: 50px;">
    <tr>
                                        <th>DNI</th>
                                        <th>NOMBRE</th>
                                        <th>APELLIDO</th>
                                    </tr>
                                    <tr>
                                    <td><%= @get_user.dni %></td>
                                        <td><%= @get_user.nombre %></td>
                                        <td><%= @get_user.apellido %></td>
